{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "declaration": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSources": false,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "experimentalDecorators": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
