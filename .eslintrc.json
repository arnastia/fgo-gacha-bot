{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "airbnb",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": ["error", "all"],
        "indent": ["error", 4],
        "@typescript-eslint/indent": [1, 4],
        "no-await-in-loop": "off",
        "no-console": "off",
        "import/prefer-default-export": "off",
        "class-methods-use-this": "off",
        "import/extensions": [
            "error",
            "always",
            {
                "ts": "never",
                "tsx": "never",
                "js": "never",
                "jsx": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
